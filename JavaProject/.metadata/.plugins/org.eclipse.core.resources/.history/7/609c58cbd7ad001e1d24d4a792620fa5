package day0108;

public class SumTest_11 {

	public static void main(String[] args) {
		// 반복문 안에서 합계 구하기
		int sum=0;
		
		for(int i=1; i<=5; i++) {
			// sum=sum+i;
			sum+=i; // 누적산
		}
		System.out.println("1~10까지의 합은 "+sum+"입니다.");
		
		// while
		int n=1;
		int tot=0;
		
		while(n<=10) {
			tot+=n; // tot=tot+n
			n++;
		}
		System.out.println("1~10까지의 합은 "+tot+"입니다.");
		
		

	}

}
