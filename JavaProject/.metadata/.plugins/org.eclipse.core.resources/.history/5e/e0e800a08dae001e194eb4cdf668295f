package day0109;

import java.util.Scanner;

public class StringIn_01 {

	public static void main(String[] args) {
		// 이름을 반복 입력해서 한씨가 몇명인지?...끝이라고 쓰면 종료
		
		Scanner sc =new Scanner(System.in);
		String name;
		int cnt=0;
		
		while(true) {
			System.out.println("이름 입력(종료: 끝): ");
			name=sc.nextLine();
			
			// break
			if(name.equals("끝")) {
				break;
			}
			
			// 조건
			if(name.startsWith("한")) {
				cnt++;
			}
			
		}
		
		

	}

}
