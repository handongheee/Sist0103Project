package day0104;

public class DataType_07 {

	public static void main(String[] args) {
		byte a = (byte)128; // 디모션: 더 작은 자료형으로 변환, 값 손실
		byte b = 127;
		
		System.out.println(a);
		System.out.println(b);
		
		// 강제형변환(cast 연산자)을 올바르게 사용하는 경우
		int x = 7;
		int y = 4;
		
		System.out.println(x/y); // 정수형끼리 계산결과는 무조건 정수형 int 타입
		System.out.println((double)x/y); // 계산 시 x를 double로 변환하여 계산->결과는 double
		System.out.println(x/(double)y);
		

	}

}
