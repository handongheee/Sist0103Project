package day0104;

import java.util.Scanner;

public class KeyBoardIn_14 {

	public static void main(String[] args) {
		// 키보드 입력에 필요한 Scanner 클래스를 import
		// 1. import
		Scanner sc = new Scanner(System.in);
		
		// 2. 변수 선언
		String name;
		int age;
		
		// 3. 입력
		System.out.print("이름을 입력해 보세요 ==>");
		name = sc.nextLine(); // String 값 반환
		
		System.out.print("나이를 입력해 보세요 ==>");
		age = sc.nextInt(); // int값 반환
		
		// 4. 최종 출력
		System.out.println(name+"님의 나이는 "+age+"세 입니다.");
		

	}

}
