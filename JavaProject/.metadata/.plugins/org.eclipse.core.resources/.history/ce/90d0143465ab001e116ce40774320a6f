package day0105;

import java.util.Calendar;
import java.util.Scanner;

public class QuizMyAgeInOut_02 {

	public static void main(String[] args) {
		// 이름, 생년, 지역
		Scanner sc = new Scanner(System.in);
		Calendar cal = Calendar.getInstance();
		
		String name, area;
		// int age = Integer.parseInt(args[0]);
		int birth = Integer.parseInt(args[1]);
		int year = cal.get(cal.YEAR);
		
		System.out.println("당신의 이름은? ==> ");
		name = sc.nextLine();
		
		System.out.println("당신이 태어난 연도는? ==> ");
		birth = Integer.parseInt(sc.nextLine());
		
		System.out.println("당신이 사는 지역은? ==> ");
		area = sc.nextLine();
		
		int age = year-birth;
		
		System.out.println("======================");
		System.out.println("["+name+" 님의 개인 정보]");
		System.out.println("======================");
		System.out.println("이름: "+name);
		System.out.println("태어난 연도: "+birth);
		System.out.println("나이: "+age);
		System.out.println("지역: "+area);
		
		
		

	}

}
